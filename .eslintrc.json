{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
  },
  "extends": [
      "plugin:react/recommended",
      "google"
  ],
  "parserOptions": {
  "ecmaFeatures": {
      "jsx": true
  },
  "ecmaVersion": 12,
  "sourceType": "module",
  "allowImportExportEverywhere": true
  },
  "plugins": [
      "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["bundle.js", "client/dist/*"],
  "rules": {
    "indent": ["error", 2],
    "eol-last": ["error", "never"],
    "require-jsdoc" : 0,
    "comma-dangle": ["error", "only-multiline"],
    "max-len": "off",
    "no-var": "off",
    "object-curly-spacing": "off"
  }
}
